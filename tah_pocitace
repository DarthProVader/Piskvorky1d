def tah_pocitace(pole_pocitace, symbol):
    for znak in pole:
        if znak == symbol and pole[list(pole).index("x")+1] == "-":
            pole_pocitace = list(pole_pocitace)
            pole_pocitace[pole_pocitace.index("x") + 1] = symbol
            pole_pocitace = "".join(pole_pocitace)
            return pole_pocitace
        elif znak == symbol and pole[list(pole).index("x")+1] == symbol and pole[list(pole).index("x")+2] == "-":
            pole_pocitace = list(pole_pocitace)
            pole_pocitace[pole_pocitace.index("x") + 2] = symbol
            pole_pocitace = "".join(pole_pocitace)
            return pole_pocitace
    cislo_policka = randrange(20)
    if list(pole_pocitace)[cislo_policka] == "-":
        pole_pocitace = list(pole_pocitace)
        pole_pocitace[cislo_policka] = symbol_pocitace
        pole_pocitace = "".join(pole_pocitace)
